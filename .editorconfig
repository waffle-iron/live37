# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file (POSIX requirement)
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
[*.{js,php}]
charset = utf-8

[*.php]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all JS under web directory
[web/**.js]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or composer.json or bower.json
[{package.json,composer.json,bower.json}]
indent_style = space
indent_size = 2
